# === APP ===
APP_NAME=Service Request System
APP_ENV=local
APP_DEBUG=true

# === DB (локальный запуск, без docker-compose) ===
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=service_request

# Полная строка, если ты её используешь
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/service_request

# === AUTH / SECURITY ===

API_KEY_HEADER=X-API-Key
ADMIN_DEFAULT_API_KEY=changeme-admin
AGENT_DEFAULT_API_KEY=changeme-agent
EMPLOYEE_DEFAULT_API_KEY=changeme-employee

# === STARTUP WAIT (optional) ===
DB_WAIT_TIMEOUT=10
DB_WAIT_INTERVAL=0.5